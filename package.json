{
  "name": "@secjs/env",
  "version": "1.1.5",
  "license": "MIT",
  "author": "Jo√£o Lenon",
  "repository": "https://github.com/SecJS/Env.git",
  "bugs": "https://github.com/SecJS/Env/issues",
  "homepage": "https://github.com/SecJS/Env#readme",
  "keywords": [
    "environment",
    "nodejs",
    "secjs",
    "env",
    "function"
  ],
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "build": "tsc",
    "test": "jest --verbose",
    "test:debug": "DEBUG=api:* jest --verbose"
  },
  "devDependencies": {
    "@adonisjs/mrm-preset": "2.0.3",
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.3",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^3.0.9",
    "jest": "^26.6.3",
    "lint-staged": "^9.4.3",
    "mrm": "^2.2.1",
    "prettier": "^2.0.5",
    "ts-jest": "^26.5.4",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@secjs/logger": "^1.1.3",
    "dotenv": "^10.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "semi": false,
    "printWidth": 80,
    "overrides": [
      {
        "files": "test/**/*",
        "options": {
          "printWidth": 120
        }
      }
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "standard",
      "plugin:prettier/recommended"
    ],
    "globals": {
      "use": true,
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "camelcase": "off"
    }
  },
  "files": [
    "SetEnv.js",
    "SetEnv.d.ts",
    "index.js",
    "index.d.ts",
    "LICENSE",
    "package.json",
    "README.md"
  ]
}
